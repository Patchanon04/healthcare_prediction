# =============================================================
# Core Environment Configuration for Medical Diagnosis Platform
# Copy this file to `.env` and update values before running locally
# or deploying (e.g. `cp .env.example .env`).
# =============================================================

# -------------------------------
# General Settings
# -------------------------------
DJANGO_SECRET_KEY=django-insecure-change-me
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000
USE_S3=False

# -------------------------------
# Database (PostgreSQL)
# -------------------------------
POSTGRES_DB=medical_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# -------------------------------
# Redis (Channels / Caching)
# -------------------------------
REDIS_HOST=redis
REDIS_PORT=6379

# -------------------------------
# Backend Service -> ML Service Integration
# -------------------------------
ML_SERVICE_URL=http://ml_service:5000
ML_SERVICE_TIMEOUT=30
ML_SERVICE_MAX_RETRIES=3

# -------------------------------
# AWS / S3 Configuration
# -------------------------------
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Optional: override model object keys if you store them in a different path
MODEL1_JSON_KEY=models/brain_tumor/model1/model.json
MODEL1_WEIGHTS_KEY=models/brain_tumor/model1/model.h5
MODEL2_KEY=models/brain_tumor/model2/cnn-parameters-improvement-23-0.91.model

# -------------------------------
# Frontend (Vue) Integration
# -------------------------------
# Used by nginx/docker-compose to point frontend to the backend API.
VUE_APP_API_URL=http://localhost:8000

# -------------------------------
# Deployment Helpers
# -------------------------------
# Uncomment and customise if you expose services publicly in production.
#ALLOWED_HOSTS=your-domain.com
#CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# Example strong defaults for production:
#DEBUG=False
#USE_S3=True
